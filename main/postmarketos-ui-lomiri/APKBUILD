maintainer="Luca Weiss <luca@lucaweiss.eu>"
pkgname=postmarketos-ui-lomiri
pkgver=5
pkgrel=0
pkgdesc="(Wayland) The convergent desktop environment (Experimental)"
url="https://lomiri.com/"
# ppc64le: Missing lomiri-weather-app
# loongarch64: Missing lomiri-docviewer-app
arch="noarch !armhf !ppc64le !riscv64 !loongarch64"
license="GPL-3.0-or-later"
depends="
	bluez
	hfd-service
	lomiri
	lomiri-indicator-location
	lomiri-location-service
	lomiri-notifications
	lomiri-system-settings
	polkit-elogind
	postmarketos-artwork-wallpapers-gnome
	postmarketos-base-ui
	postmarketos-base-ui-audio
	postmarketos-base-ui-networkmanager
	postmarketos-base-ui-qt-tweaks
	postmarketos-base-ui-qt-wayland
	postmarketos-base-ui-tinydm
	postmarketos-base-ui-wifi
	repowerd
	sensorfw
	superd
	tinydm
	xwayland
"
_pmb_recommends="
	ayatana-indicator-messages
	ayatana-indicator-sound
	deviceinfo-converter
	font-noto
	font-noto-extra
	font-noto-emoji
	lomiri-calculator-app
